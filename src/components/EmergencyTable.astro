---
// Obtencion de los partes desde el backend
const response = await fetch('http://localhost:3001/partesemergencias'); 
let emergencies = [];

if (response.ok) {
  emergencies = await response.json();
} else {
  console.error("Error fetching emergencies:", response.statusText);
}
